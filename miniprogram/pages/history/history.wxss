.history-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 标签页 */
.tabs-container {
  background-color: #ffffff;
  border-bottom: 1px solid #e5e5e5;
  flex-shrink: 0;
}

.tabs-scroll {
  width: 100%;
  white-space: nowrap;
}

.tabs {
  display: flex;
  padding: 0 16px;
}

.tab-item {
  padding: 12px 16px;
  font-size: 14px;
  color: #666;
  border-bottom: 2px solid transparent;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.tab-item.active {
  color: #1890ff;
  border-bottom-color: #1890ff;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  gap: 12px;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid #f0f0f0;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 14px;
  color: #999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  gap: 12px;
}

.empty-icon {
  font-size: 48px;
  opacity: 0.5;
}

.empty-text {
  font-size: 14px;
  color: #999;
}

/* 滚动容器 */
.history-scroll {
  flex: 1;
  width: 100%;
}

/* 列表容器 - 网格布局 */
.items-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 24rpx;
  padding-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 历史记录项 - 一行两个 */
.history-item {
  width: 48%;
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.mode-badge {
  display: inline-block;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 12px;
  font-weight: 500;
  color: #ffffff;
}

.mode-badge.puzzle {
  background-color: #1890ff;
}

.mode-badge.transform {
  background-color: #52c41a;
}

.item-time {
  font-size: 12px;
  color: #999;
}

/* 原始图片 */
.original-images {
  display: flex;
  gap: 8rpx;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
  justify-content: center;
}

.image-thumbnail {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
  cursor: pointer;
  transition: transform 0.2s ease;
}

.image-thumbnail:active {
  transform: scale(0.95);
}

.thumbnail-img {
  width: 100%;
  height: 100%;
}

/* 箭头 */
.arrow-container {
  display: flex;
  justify-content: center;
  margin: 8px 0;
}

.arrow {
  font-size: 20px;
  color: #999;
}

/* 生成结果 */
.generated-image {
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
  background-color: #f0f0f0;
}

.result-img {
  width: 100%;
  height: auto;
  display: block;
}

/* 操作按钮 */
.item-actions {
  display: flex;
  gap: 8px;
}

.action-btn {
  flex: 1;
  padding: 8px 12px;
  font-size: 12px;
  border-radius: 4px;
  border: none;
  color: #ffffff;
  background-color: #1890ff;
  transition: background-color 0.2s ease;
}

.action-btn:active {
  opacity: 0.8;
}

.delete-btn {
  background-color: #ff4d4f;
}

/* 加载更多提示 */
.load-more-tip {
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 16px;
  color: #999;
  font-size: 12px;
}

/* 图片预览弹窗 */
.preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.preview-image {
  width: 90%;
  height: 90%;
  max-width: 100%;
  max-height: 100%;
}
