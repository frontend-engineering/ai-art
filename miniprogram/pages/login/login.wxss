/* 微信登录页面样式 */
.login-container {
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.login-content {
  width: 80%;
  max-width: 400px;
  padding: 60rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 40rpx;
}

.logo image {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.error {
  padding: 40rpx 0;
}

.error text {
  display: block;
  font-size: 28rpx;
  color: #f56c6c;
  margin-bottom: 30rpx;
}

.retry-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #667eea;
  color: white;
  border-radius: 35rpx;
  font-size: 28rpx;
  border: none;
}

.tips {
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #999;
}
