/**
 * 时空拼图启动页样式 - 复用原网页 PuzzleLaunchScreen 设计
 * Requirements: 2.2, 10.1-10.3
 */

/* 页面容器 - 固定一屏高度，禁止滚动 */
.puzzle-launch-page {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  z-index: 1;
}

/* 背景渐变层 */
.launch-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, 
    rgba(255, 248, 240, 0.85) 0%, 
    rgba(255, 248, 240, 0.9) 30%,
    rgba(255, 220, 220, 0.95) 100%
  );
  z-index: 1;
  pointer-events: none;
}

/* 背景装饰 */
.bg-decorations {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 2;
}

.decoration {
  position: absolute;
  font-size: 48rpx;
  opacity: 0.2;
}

.decoration-1 {
  top: calc(80rpx + env(safe-area-inset-top));
  left: 40rpx;
  animation: twinkle 2s ease-in-out infinite;
}

.decoration-2 {
  top: calc(140rpx + env(safe-area-inset-top));
  right: 60rpx;
  font-size: 56rpx;
  animation: float 3s ease-in-out infinite;
}

.decoration-3 {
  bottom: calc(200rpx + env(safe-area-inset-bottom));
  left: 60rpx;
  animation: twinkle 2s ease-in-out infinite 0.5s;
}

.decoration-4 {
  bottom: calc(140rpx + env(safe-area-inset-bottom));
  right: 40rpx;
  animation: twinkle 2s ease-in-out infinite 1s;
}

@keyframes twinkle {
  0%, 100% { opacity: 0.2; transform: scale(1); }
  50% { opacity: 0.4; transform: scale(1.1); }
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-16rpx); }
}

/* 顶部工具栏 */
.toolbar {
  position: absolute;
  top: calc(16rpx + env(safe-area-inset-top));
  left: 32rpx;
  right: 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.back-icon {
  font-size: 48rpx;
  color: var(--color-festival-red);
  font-weight: bold;
  line-height: 1;
  margin-right: 4rpx;
}

.toolbar-right {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
}

/* 主内容区 - 使用 flex 布局自适应一屏 */
.launch-content {
  position: absolute;
  top: calc(88rpx + env(safe-area-inset-top));
  left: 0;
  right: 0;
  bottom: env(safe-area-inset-bottom);
  z-index: 10;
  padding: 24rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/* 标题区域 */
.title-section {
  text-align: center;
}

.slogan-text {
  font-size: 28rpx;
  color: #8B4513;
  font-weight: 500;
}

/* 模式图标和名称 */
.mode-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mode-icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, var(--color-festival-red) 0%, #E85A55 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 24rpx rgba(212, 48, 43, 0.4);
  margin-bottom: 16rpx;
}

.mode-icon {
  font-size: 60rpx;
}

.mode-name {
  font-size: 52rpx;
  font-weight: bold;
  color: var(--color-festival-red);
  text-shadow: 0 4rpx 12rpx rgba(212, 48, 43, 0.25);
  margin-bottom: 8rpx;
}

.mode-slogan {
  font-size: 28rpx;
  color: #8B4513;
  font-weight: 500;
}

/* 预览区域 */
.preview-section {
  width: 100%;
}

.preview-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 20rpx;
  backdrop-filter: blur(10px);
}

.preview-photos {
  display: flex;
  flex-direction: row;
  gap: 6rpx;
}

.photo-item {
  width: 64rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #E5E7EB 0%, #D1D5DB 100%);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #9CA3AF;
}

.photo-icon {
  font-size: 28rpx;
}

.preview-arrow {
  width: 48rpx;
  height: 48rpx;
  background: var(--color-festival-red);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.arrow-text {
  font-size: 28rpx;
  color: white;
  font-weight: bold;
}

.preview-result {
  flex: 1;
  max-width: 140rpx;
}

.result-placeholder {
  aspect-ratio: 3/4;
  background: linear-gradient(135deg, #FFF0F0 0%, #FFE5E5 100%);
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  border: 3rpx solid var(--color-festival-red);
}

.result-icon {
  font-size: 36rpx;
}

.result-text {
  font-size: 20rpx;
  color: var(--color-festival-red);
  font-weight: 500;
}

/* 功能说明 */
.description-section {
  width: 100%;
}

.description-card {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  text-align: center;
  margin-bottom: 12rpx;
}

.description-text {
  font-size: 28rpx;
  color: #8B4513;
  font-weight: 500;
}

.guide-card {
  background: rgba(212, 48, 43, 0.08);
  border-radius: 12rpx;
  padding: 14rpx 24rpx;
  text-align: center;
}

.guide-text {
  font-size: 24rpx;
  color: #6B7280;
}

/* 操作按钮区域 */
.action-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  width: 100%;
}

/* 立即制作按钮 */
.start-btn {
  position: relative;
  width: 420rpx;
  height: 88rpx;
  border-radius: 44rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 24rpx rgba(212, 48, 43, 0.4);
}

.start-btn-hover {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(212, 48, 43, 0.3);
}

.btn-inner {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, var(--color-festival-red) 0%, #E85A55 100%);
  border: 3rpx solid var(--color-festival-gold);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-text {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--color-festival-gold);
  letter-spacing: 4rpx;
}

/* 按钮光效 */
.btn-shine {
  position: absolute;
  top: 0;
  left: -100%;
  width: 50%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: shine 2s ease-in-out infinite;
}

@keyframes shine {
  0% { left: -100%; }
  50%, 100% { left: 200%; }
}

/* ========================================
   动画类
   ======================================== */

.animate-fade-in {
  animation: fadeIn 0.6s ease-out;
}

.animate-scale-in {
  animation: scaleIn 0.6s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes scaleIn {
  from { opacity: 0; transform: scale(0.8); }
  to { opacity: 1; transform: scale(1); }
}

/* ========================================
   老年模式适配
   ======================================== */

.elder-mode .slogan-text {
  font-size: 34rpx;
}

.elder-mode .mode-icon-wrapper {
  width: 140rpx;
  height: 140rpx;
}

.elder-mode .mode-icon {
  font-size: 72rpx;
}

.elder-mode .mode-name {
  font-size: 60rpx;
}

.elder-mode .mode-slogan {
  font-size: 34rpx;
}

.elder-mode .description-text {
  font-size: 34rpx;
}

.elder-mode .guide-text {
  font-size: 30rpx;
}

.elder-mode .start-btn {
  width: 480rpx;
  height: 100rpx;
}

.elder-mode .btn-text {
  font-size: 38rpx;
}

/* AI生成提示（合规要求） */
.ai-notice {
  width: 100%;
  text-align: center;
  margin-top: 24rpx;
}

.ai-notice-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.5;
}

/* 老年模式 - AI提示 */
.elder-mode .ai-notice-text {
  font-size: 26rpx;
}
