/**
 * 时空拼图上传页样式 - 5个独立图片框布局
 * Requirements: 2.2, 6.1-6.5, 10.1-10.3
 */

.upload-page {
  position: relative;
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF8F0 0%, #FFE4E1 50%, #FFF0F0 100%);
  overflow-x: hidden;
  box-sizing: border-box;
}

.upload-page.page-with-nav {
  padding-top: 0;
}

/* 背景图片层 */
.upload-bg-image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  pointer-events: none;
}

.upload-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, 
    rgba(212, 48, 43, 0.03) 0%, 
    rgba(255, 248, 240, 0.9) 30%,
    rgba(255, 240, 240, 1) 100%
  );
  z-index: 0;
  pointer-events: none;
}

/* 主内容区 */
.upload-content {
  position: relative;
  z-index: 10;
  width: 100%;
  padding: 32rpx 48rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  /* padding-top 由 JS 动态设置 */
}

/* 标题说明 */
.title-section {
  text-align: center;
  margin-bottom: 32rpx;
}

.title-text {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: var(--color-chinese-red);
  margin-bottom: 12rpx;
}

.subtitle-text {
  display: block;
  font-size: 28rpx;
  color: #8B4513;
}

/* 错误提示 */
.error-toast {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #FEF2F2;
  border: 2rpx solid #FECACA;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
}

.error-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.error-text {
  flex: 1;
  font-size: 26rpx;
  color: #DC2626;
}

.error-close {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.close-icon {
  font-size: 32rpx;
  color: #9CA3AF;
}

/* 5个图片框布局 */
.upload-grid {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.upload-row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 20rpx;
}

.upload-box {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border: 4rpx dashed var(--color-chinese-red);
  border-radius: 24rpx;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.5);
  transition: all 0.3s ease;
}

.upload-box:active {
  transform: scale(0.95);
  border-style: solid;
}

/* 占位图片 */
.placeholder-image {
  width: 100%;
  height: 100%;
}

/* 已上传的图片 */
.uploaded-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.delete-icon {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: bold;
}

/* 提示文字 */
.upload-tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.tips-count {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--color-chinese-red);
}

.tips-hint {
  font-size: 24rpx;
  color: #9CA3AF;
}

/* 示例提示 */
.example-tips {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  background: rgba(212, 48, 43, 0.05);
  padding: 20rpx 28rpx;
  border-radius: 16rpx;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}

.tip-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 12rpx;
}

.tip-icon {
  font-size: 22rpx;
  color: #10B981;
  font-weight: bold;
}

.tip-text {
  font-size: 24rpx;
  color: #6B7280;
}

/* 操作按钮 */
.action-buttons {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 24rpx;
}

.next-btn {
  width: 400rpx;
  height: 88rpx;
  background: #d4302b;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 44rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(212, 48, 43, 0.3);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 88rpx;
}

.next-btn::after {
  border: none;
}

.next-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(212, 48, 43, 0.3);
}

.next-btn.disabled {
  opacity: 0.6;
  transform: none;
}

/* 底部提示 */
.bottom-tips {
  padding: 24rpx;
  text-align: center;
}

.tips-text {
  font-size: 24rpx;
  color: #9CA3AF;
}

/* 处理中遮罩 */
.processing-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.processing-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  background: #FFD700;
  width: 400rpx;
  height: 400rpx;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.loading-spinner {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.status-text {
  font-size: 32rpx;
  color: #8B4513;
  font-weight: bold;
  text-align: center;
  white-space: nowrap;
}

.progress-bar {
  width: 320rpx;
  height: 8rpx;
  background: rgba(139, 69, 19, 0.2);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #8B4513;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* ========================================
   老年模式适配
   ======================================== */

.elder-mode .title-text {
  font-size: 56rpx;
}

.elder-mode .subtitle-text {
  font-size: 34rpx;
}

.elder-mode .upload-box {
  width: 220rpx;
  height: 220rpx;
}

.elder-mode .tips-count {
  font-size: 38rpx;
}

.elder-mode .tips-hint {
  font-size: 30rpx;
}

.elder-mode .tip-text {
  font-size: 30rpx;
}

.elder-mode .next-btn {
  font-size: 38rpx;
  height: 96rpx;
}

.elder-mode .status-text {
  font-size: 38rpx;
}

.elder-mode .error-text {
  font-size: 32rpx;
}

.elder-mode .tips-text {
  font-size: 30rpx;
}

/* ========================================
   时空拼图模式导航栏覆盖
   ======================================== */

.upload-page .back-icon {
  color: #FFD700;
}

/* 覆盖 Transform 的金色背景，改为红色 */
.upload-page .page-with-nav::before {
  background: #d4302b !important;
}

.upload-page .mode-subtitle-bar {
  background: #d4302b !important;
}

.upload-page .nav-bar {
  background: #d4302b !important;
}

.upload-page .nav-title {
  color: #FFD700 !important;
}

/* AI生成提示（合规要求） */
.ai-notice {
  width: 100%;
  text-align: center;
  margin-top: 24rpx;
  padding-bottom: 32rpx;
}

.ai-notice-text {
  font-size: 22rpx;
  color: #fff2b3;
  line-height: 1.5;
}

/* 老年模式 - AI提示 */
.elder-mode .ai-notice-text {
  font-size: 26rpx;
}
