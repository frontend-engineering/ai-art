/**
 * 时空拼图历史记录页样式
 * Requirements: 2.2, 11.1-11.4, 10.1-10.3
 */

@import '/pages/transform/history/history.wxss';

/* ========================================
   时空拼图模式导航栏覆盖
   ======================================== */

.history-page .back-icon {
  color: #FFD700;
}

/* 覆盖 Transform 的金色背景，改为红色 */
.history-page .page-with-nav::before {
  background: #d4302b !important;
}

.history-page .mode-subtitle-bar {
  background: #d4302b !important;
}

.history-page .nav-bar {
  background: #d4302b !important;
}

.history-page .nav-title {
  color: #FFD700 !important;
}
