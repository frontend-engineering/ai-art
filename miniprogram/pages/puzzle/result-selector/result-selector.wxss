/**
 * 时空拼图模式结果选择页样式
 * Requirements: 2.2, 15.1-15.4
 */

.result-selector-page {
  position: relative;
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #8B0000 0%, #6B0000 50%, #4B0000 100%);
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
}

.selector-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 50% 30%, rgba(255, 215, 0, 0.08) 0%, transparent 50%);
  z-index: 0;
  pointer-events: none;
}

/* 顶部导航栏 */
.nav-bar {
  position: relative;
  z-index: 100;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  padding-top: calc(24rpx + env(safe-area-inset-top));
  background: rgba(139, 0, 0, 0.95);
  backdrop-filter: blur(10px);
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: var(--color-festival-gold);
  font-weight: bold;
  line-height: 1;
  margin-right: 4rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--color-festival-gold);
}

.nav-placeholder {
  width: 64rpx;
}

/* 提示区域 */
.tip-section {
  padding: 24rpx 32rpx 16rpx;
  text-align: center;
}

.tip-text {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 8rpx;
}

.ai-tip {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 215, 0, 0.8);
  font-weight: 500;
}

/* 选择器内容区 */
.selector-content {
  flex: 1;
  position: relative;
  z-index: 10;
  padding: 16rpx 32rpx 32rpx;
}

/* 老年模式适配 */
.elder-mode .nav-title {
  font-size: 42rpx;
}

.elder-mode .tip-text {
  font-size: 30rpx;
}

.elder-mode .ai-tip {
  font-size: 26rpx;
}
