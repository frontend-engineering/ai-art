/**
 * 时空拼图结果选择页样式 - 复用原网页 ResultSelectorPage 设计
 * Requirements: 2.2, 15.1-15.4, 10.1-10.3
 */

.result-selector-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF8DC 0%, #FFF9E5 50%, #FFF0CC 100%);
  position: relative;
  display: flex;
  flex-direction: column;
}

.selector-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, 
    rgba(212, 175, 55, 0.08) 0%, 
    rgba(255, 248, 220, 0.9) 30%,
    rgba(255, 240, 204, 1) 100%
  );
  z-index: 0;
}

/* 顶部导航栏 */
.nav-bar {
  position: relative;
  z-index: 100;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  padding-top: calc(24rpx + env(safe-area-inset-top));
  background: rgba(139, 0, 0, 0.9);
  backdrop-filter: blur(10px);
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: var(--color-festival-gold);
  font-weight: bold;
  line-height: 1;
  margin-right: 4rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--color-festival-gold);
}

.nav-placeholder { width: 64rpx; }

/* 提示文字 */
.tip-section {
  position: relative;
  z-index: 10;
  padding: 24rpx 32rpx;
  text-align: center;
}

.tip-text {
  font-size: 26rpx;
  color: #8B4513;
}

/* 选择器内容 */
.selector-content {
  flex: 1;
  position: relative;
  z-index: 10;
}

/* 老年模式适配 */
.elder-mode .nav-title { font-size: 42rpx; }
.elder-mode .tip-text { font-size: 32rpx; }
