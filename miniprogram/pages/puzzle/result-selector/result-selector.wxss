/**
 * 时空拼图模式结果选择页样式
 * Requirements: 2.2, 15.1-15.4
 */

.result-selector-page {
  position: relative;
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #8B0000 0%, #6B0000 50%, #4B0000 100%);
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
}

.selector-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 50% 30%, rgba(255, 215, 0, 0.08) 0%, transparent 50%);
  z-index: 0;
  pointer-events: none;
}

/* 导航栏样式使用通用样式文件 common-navigation.wxss */

/* 提示区域 */
.tip-section {
  padding: 24rpx 32rpx 16rpx;
  text-align: center;
}

.tip-text {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 8rpx;
}

.ai-tip {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 215, 0, 0.8);
  font-weight: 500;
}

/* 选择器内容区 */
.selector-content {
  flex: 1;
  position: relative;
  z-index: 10;
  padding: 16rpx 32rpx 32rpx;
}

/* 老年模式适配 */
.elder-mode .nav-title {
  font-size: 42rpx;
}

.elder-mode .tip-text {
  font-size: 30rpx;
}

.elder-mode .ai-tip {
  font-size: 26rpx;
}

/* ========================================
   时空拼图模式导航栏覆盖
   ======================================== */

.result-selector-page .back-icon {
  color: #FFD700;
}

/* 覆盖 Transform 的金色背景，改为红色 */
.result-selector-page .page-with-nav::before {
  background: #d4302b !important;
}

.result-selector-page .mode-subtitle-bar {
  background: #d4302b !important;
}

.result-selector-page .nav-bar {
  background: #d4302b !important;
}

.result-selector-page .nav-title {
  color: #FFD700 !important;
}
