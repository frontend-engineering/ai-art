<!--
  时空拼图模式结果选择页 - 复用原网页 ResultSelectorPage 样式
  Requirements: 2.2, 15.1-15.4
-->
<view class="result-selector-page page-with-nav {{isElderMode ? 'elder-mode' : ''}}">
  <!-- 四角装饰背景 -->
  <corner-background />
  
  <!-- 背景 -->
  <view class="selector-bg"></view>
  
  <!-- 大小字切换按钮（右上角，胶囊按钮下方） -->
  <view class="elder-mode-toggle-fixed" style="top: {{statusBarHeight + navBarHeight + 16}}px; right: {{menuRight}}px; left: auto;">
    <elder-mode-toggle />
  </view>
  
  <!-- 顶部导航栏 -->
  <view class="nav-bar" style="padding-top: {{statusBarHeight}}px; height: {{statusBarHeight + navBarHeight}}px;">
    <view class="nav-left">
      <view class="back-btn" bindtap="goBack">
        <text class="back-icon">‹</text>
      </view>
    </view>
    <text class="nav-title">选择结果</text>
    <view class="nav-right"></view>
  </view>
  
  <!-- 提示文字 -->
  <view class="tip-section">
    <text class="tip-text">点击图片可放大预览，长按可预览大图</text>
  </view>
  
  <!-- 四宫格选择器 -->
  <view class="selector-content">
    <four-grid-selector 
      images="{{images}}"
      selectedImage="{{selectedImage}}"
      bind:select="handleSelect"
      bind:confirm="handleConfirm"
    />
  </view>
</view>
