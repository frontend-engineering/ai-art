/**
 * 富贵变身上传页样式
 * Requirements: 2.3, 6.1-6.5, 10.1-10.3
 */

.upload-page {
  position: relative;
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF8F0 0%, #FFE4E1 50%, #FFF0F0 100%);
  overflow-x: hidden;
  box-sizing: border-box;
}

.upload-page.page-with-nav {
  padding-top: 0;
}

.upload-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, 
    rgba(212, 48, 43, 0.03) 0%, 
    rgba(255, 248, 240, 0.9) 30%,
    rgba(255, 240, 240, 1) 100%
  );
  z-index: 0;
  pointer-events: none;
}

/* 主内容区 */
.upload-content {
  position: relative;
  z-index: 10;
  width: 100%;
  padding: 32rpx 48rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  margin-top: 120rpx;
}

/* 标题说明 */
.title-section {
  text-align: center;
  margin-bottom: 32rpx;
}

.title-text {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: var(--color-chinese-red);
  margin-bottom: 12rpx;
}

.subtitle-text {
  display: block;
  font-size: 28rpx;
  color: #8B4513;
}

/* 上传区域 - 虚线框 */
.upload-area {
  width: 100%;
  max-width: 500rpx;
  border: 4rpx dashed var(--color-chinese-red);
  border-radius: 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: transparent;
  transition: all 0.3s ease;
  overflow: hidden;
  margin: 0 auto 32rpx;
  position: relative;
  padding-bottom: 100%;
}

.upload-area-hover {
  transform: scale(0.98);
  border-style: solid;
}

/* 上传提示容器 */
.upload-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

/* 相机图片 - 655:718 比例 */
.camera-image {
  width: 100%;
  height: 100%;
}

/* 文本部分 - 框外 */
.upload-text-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 16rpx;
}

.upload-text {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--color-chinese-red);
  margin-bottom: 8rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-bottom: 24rpx;
}

/* 示例提示 */
.example-tips {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  background: rgba(212, 48, 43, 0.05);
  padding: 20rpx 28rpx;
  border-radius: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.tip-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 12rpx;
}

.tip-icon {
  font-size: 22rpx;
  color: #10B981;
  font-weight: bold;
}

.tip-text {
  font-size: 24rpx;
  color: #6B7280;
}

/* 上传中状态 - 页面居中显示 */
.uploading-state {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  z-index: 1000;
  margin-top: 60rpx;
}

.loading-spinner {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.status-text {
  font-size: 36rpx;
  color: #000000;
  font-weight: bold;
  text-align: center;
  white-space: nowrap;
}

.progress-bar {
  width: 400rpx;
  height: 8rpx;
  background: rgba(212, 48, 43, 0.2);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--color-chinese-red), #E85A50);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 错误提示 */
.error-toast {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #FEF2F2;
  border: 2rpx solid #FECACA;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
}

.error-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.error-text {
  flex: 1;
  font-size: 26rpx;
  color: #DC2626;
}

.error-close {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.close-icon {
  font-size: 32rpx;
  color: #9CA3AF;
}

/* 底部提示 */
.bottom-tips {
  margin-top: 32rpx;
  padding: 24rpx;
  text-align: center;
}

.tips-text {
  font-size: 24rpx;
  color: #9CA3AF;
}

/* ========================================
   老年模式适配
   ======================================== */

.elder-mode .title-text {
  font-size: 56rpx;
}

.elder-mode .subtitle-text {
  font-size: 34rpx;
}

.elder-mode .upload-area {
  height: 480rpx;
}

.elder-mode .upload-text {
  font-size: 38rpx;
}

.elder-mode .upload-hint {
  font-size: 30rpx;
}

.elder-mode .tip-text {
  font-size: 30rpx;
}

.elder-mode .status-text {
  font-size: 38rpx;
}

.elder-mode .error-text {
  font-size: 32rpx;
}

.elder-mode .tips-text {
  font-size: 30rpx;
}
