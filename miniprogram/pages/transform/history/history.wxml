<wxs module="utils">
module.exports = {
  formatDate: function(dateStr) {
    if (!dateStr) return '';
    var date = getDate(dateStr);
    var month = date.getMonth() + 1;
    var day = date.getDate();
    var hour = date.getHours();
    var minute = date.getMinutes();
    return (month < 10 ? '0' + month : month) + '/' + 
           (day < 10 ? '0' + day : day) + ' ' + 
           (hour < 10 ? '0' + hour : hour) + ':' + 
           (minute < 10 ? '0' + minute : minute);
  },
