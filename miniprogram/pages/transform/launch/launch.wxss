/**
 * 富贵变身启动页样式 - 复用原网页 TransformLaunchScreen 设计
 * Requirements: 2.3, 10.1-10.3
 */

/* 导航栏样式使用通用样式文件 common-navigation.wxss */

/* 页面容器 - 固定一屏高度，禁止滚动 */
.transform-launch-page {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  z-index: 1;
}

/* 背景图片层 */
.launch-bg-image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  pointer-events: none;
}

/* 背景渐变层 */
.launch-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, 
    rgba(255, 248, 220, 0.85) 0%, 
    rgba(255, 248, 220, 0.9) 30%,
    rgba(255, 240, 204, 0.95) 100%
  );
  z-index: 1;
  pointer-events: none;
}

/* 背景装饰 */
.bg-decorations {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 2;
}

.decoration {
  position: absolute;
  font-size: 48rpx;
  opacity: 0.2;
}

.decoration-1 {
  top: calc(80rpx + env(safe-area-inset-top));
  left: 40rpx;
  animation: twinkle 2s ease-in-out infinite;
}

.decoration-2 {
  top: calc(140rpx + env(safe-area-inset-top));
  right: 60rpx;
  font-size: 56rpx;
  animation: float 3s ease-in-out infinite;
}

.decoration-3 {
  bottom: calc(200rpx + env(safe-area-inset-bottom));
  left: 60rpx;
  animation: twinkle 2s ease-in-out infinite 0.5s;
}

.decoration-4 {
  bottom: calc(140rpx + env(safe-area-inset-bottom));
  right: 40rpx;
  animation: twinkle 2s ease-in-out infinite 1s;
}

@keyframes twinkle {
  0%, 100% { opacity: 0.2; transform: scale(1); }
  50% { opacity: 0.4; transform: scale(1.1); }
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-16rpx); }
}

/* 主内容区 - 使用 flex 布局自适应一屏 */
.launch-content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: env(safe-area-inset-bottom);
  z-index: 10;
  padding: 24rpx 40rpx;
  padding-top: calc(env(safe-area-inset-top) + 144rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/* 标题区域 */
.title-section {
  text-align: center;
}

.slogan-text {
  font-size: 28rpx;
  color: #8B4513;
  font-weight: 500;
}

/* 模式图标和名称 */
.mode-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mode-icon-wrapper {
  width: 180rpx;
  height: 180rpx;
  background: linear-gradient(135deg, var(--color-festival-gold) 0%, #F4CF47 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 24rpx rgba(212, 175, 55, 0.4);
  margin-bottom: 16rpx;
  padding: 8rpx;
  overflow: hidden;
}

.mode-icon {
  font-size: 60rpx;
}

.mode-icon-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
  object-position: center;
}

.mode-icon-emoji {
  font-size: 96rpx;
}

.mode-name {
  font-size: 52rpx;
  font-weight: bold;
  color: var(--color-festival-gold);
  text-shadow: 0 4rpx 12rpx rgba(212, 175, 55, 0.25);
  margin-bottom: 8rpx;
}

.mode-slogan {
  font-size: 28rpx;
  color: #8B4513;
  font-weight: 500;
}

/* 预览区域 */
.preview-section {
  width: 100%;
}

.preview-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  padding: 24rpx;
  background: transparent;
  border-radius: 20rpx;
}

.preview-before,
.preview-after {
  flex: 1;
  max-width: 200rpx;
}

.preview-placeholder {
  aspect-ratio: 3/4;
  background: linear-gradient(135deg, #E5E7EB 0%, #D1D5DB 100%);
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  border: 3rpx dashed #9CA3AF;
  overflow: hidden;
  position: relative;
}

.preview-placeholder.gold {
  background: linear-gradient(135deg, #FFF9E5 0%, #FFE5B4 100%);
  border: 3rpx solid var(--color-festival-gold);
}

.preview-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.preview-label {
  font-size: 28rpx;
  color: #8B4513;
  font-weight: 500;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.placeholder-icon {
  font-size: 48rpx;
  position: relative;
  z-index: 1;
}

.placeholder-text {
  font-size: 22rpx;
  color: #6B7280;
  position: relative;
  z-index: 1;
}

.preview-placeholder.gold .placeholder-text {
  color: #8B4513;
  font-weight: 500;
}

.preview-arrow {
  width: 48rpx;
  height: 48rpx;
  background: var(--color-festival-gold);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.arrow-text {
  font-size: 28rpx;
  color: white;
  font-weight: bold;
}

/* 功能说明 */
.description-section {
  width: 100%;
}

.description-card {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  text-align: center;
  margin-bottom: 12rpx;
}

.description-text {
  font-size: 28rpx;
  color: #8B4513;
  font-weight: 500;
}

.guide-card {
  background: rgba(212, 175, 55, 0.1);
  border-radius: 12rpx;
  padding: 14rpx 24rpx;
  text-align: center;
}

.guide-text {
  font-size: 24rpx;
  color: #6B7280;
}

/* 操作按钮区域 */
.action-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  width: 100%;
}

/* 立即制作按钮 */
.start-btn {
  position: relative;
  width: 420rpx;
  height: 88rpx;
  border-radius: 44rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 24rpx rgba(212, 175, 55, 0.4);
}

.start-btn.disabled {
  opacity: 0.6;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.start-btn.disabled .btn-inner {
  background: linear-gradient(135deg, #CCCCCC 0%, #999999 100%);
  border-color: #CCCCCC;
}

.start-btn.disabled .btn-text {
  color: #666666;
}

.start-btn-hover {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(212, 175, 55, 0.3);
}

.btn-inner {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, var(--color-festival-gold) 0%, #F4CF47 100%);
  border: 3rpx solid #FFD700;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B0000;
  letter-spacing: 4rpx;
}

/* 按钮光效 */
.btn-shine {
  position: absolute;
  top: 0;
  left: -100%;
  width: 50%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: shine 2s ease-in-out infinite;
}

@keyframes shine {
  0% { left: -100%; }
  50%, 100% { left: 200%; }
}

/* 我的记录按钮 */
.history-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 8rpx;
  padding: 14rpx 32rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.history-btn-hover {
  background: rgba(255, 255, 255, 0.95);
  transform: scale(0.98);
}

.history-icon {
  font-size: 28rpx;
}

.history-text {
  font-size: 24rpx;
  color: #8B4513;
  font-weight: 500;
}

/* ========================================
   动画类
   ======================================== */

.animate-fade-in {
  animation: fadeIn 0.6s ease-out;
}

.animate-scale-in {
  animation: scaleIn 0.6s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes scaleIn {
  from { opacity: 0; transform: scale(0.8); }
  to { opacity: 1; transform: scale(1); }
}

/* ========================================
   老年模式适配
   ======================================== */

.elder-mode .slogan-text {
  font-size: 34rpx;
}

.elder-mode .mode-icon-wrapper {
  width: 220rpx;
  height: 220rpx;
  padding: 10rpx;
}

.elder-mode .mode-icon {
  font-size: 72rpx;
}

.elder-mode .mode-name {
  font-size: 60rpx;
}

.elder-mode .mode-slogan {
  font-size: 34rpx;
}

.elder-mode .description-text {
  font-size: 34rpx;
}

.elder-mode .guide-text {
  font-size: 30rpx;
}

.elder-mode .start-btn {
  width: 480rpx;
  height: 100rpx;
}

.elder-mode .btn-text {
  font-size: 38rpx;
}

.elder-mode .history-btn {
  padding: 20rpx 40rpx;
}

.elder-mode .history-icon {
  font-size: 34rpx;
}

.elder-mode .history-text {
  font-size: 30rpx;
}

/* AI生成提示（合规要求） */
.ai-notice {
  width: 100%;
  text-align: center;
  margin-top: 24rpx;
}

.ai-notice-text {
  font-size: 22rpx;
  color: rgba(139, 0, 0, 0.6);
  line-height: 1.5;
}

/* 老年模式 - AI提示 */
.elder-mode .ai-notice-text {
  font-size: 26rpx;
}
