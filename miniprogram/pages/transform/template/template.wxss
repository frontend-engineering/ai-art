/**
 * 富贵变身模板选择页样式 - 复用原网页 TemplateSelector 设计
 * Requirements: 2.3, 10.1-10.3
 */

.template-page {
  position: relative;
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF8DC 0%, #FFF9E5 50%, #FFF0CC 100%);
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
  box-sizing: border-box;
}

.template-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, 
    rgba(212, 175, 55, 0.08) 0%, 
    rgba(255, 248, 220, 0.9) 30%,
    rgba(255, 240, 204, 1) 100%
  );
  z-index: 0;
  pointer-events: none;
}

/* 导航栏样式使用通用样式文件 common-navigation.wxss */

/* 分类标签栏 */
.category-scroll {
  position: relative;
  z-index: 10;
  white-space: nowrap;
  padding: 24rpx 0;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10px);
}

.category-list {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
  padding: 0 24rpx;
}

.category-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 28rpx;
  border-radius: 32rpx;
  background: rgba(0, 0, 0, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.category-item.active {
  background: linear-gradient(135deg, var(--color-festival-gold) 0%, #F4CF47 100%);
  border-color: var(--color-festival-gold);
  box-shadow: 0 4rpx 16rpx rgba(212, 175, 55, 0.4);
}

.category-icon {
  font-size: 28rpx;
}

.category-name {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
}

.category-item.active .category-name {
  color: #8B0000;
  font-weight: bold;
}

/* 模板网格 */
.template-scroll {
  flex: 1;
  position: relative;
  z-index: 10;
  width: 100%;
}

.template-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 20rpx;
  padding: 24rpx;
  padding-bottom: 280rpx;
  width: 100%;
  box-sizing: border-box;
}

.template-item {
  position: relative;
  width: 48%;
  border-radius: 24rpx;
  overflow: hidden;
  background: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  border: 4rpx solid transparent;
  box-sizing: border-box;
}

.template-item.selected {
  border-color: var(--color-festival-gold);
  box-shadow: 0 8rpx 32rpx rgba(212, 175, 55, 0.3);
  transform: scale(1.02);
}

.template-image {
  width: 100%;
  height: auto;
  display: block;
}

.template-image-wrapper {
  position: relative;
  width: 100%;
  padding-top: 133.33%; /* 3:4 宽高比 */
}

.template-image-inner {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

/* 选中标记 */
.check-mark {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, var(--color-festival-gold) 0%, #F4CF47 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.check-icon {
  font-size: 28rpx;
  color: #8B0000;
  font-weight: bold;
}

/* 预览按钮 */
.preview-btn {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  width: 64rpx;
  height: 64rpx;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.preview-icon {
  font-size: 32rpx;
}

/* 模板信息 */
.template-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 48rpx 16rpx 16rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
}

.template-name {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* 付费标记 */
.premium-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #FFD700, #FFC700);
  border-radius: 8rpx;
}

.premium-text {
  font-size: 20rpx;
  color: #8B0000;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #9CA3AF;
}

/* 底部操作区 */
.bottom-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  width: 100%;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: linear-gradient(to top, rgba(139, 0, 0, 1), rgba(139, 0, 0, 0.95), transparent);
  box-sizing: border-box;
}

.selected-tip {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.tip-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.tip-value {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* 生成按钮 */
.generate-btn {
  position: relative;
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
}

.generate-btn.disabled {
  opacity: 0.5;
}

.generate-btn.loading {
  pointer-events: none;
}

.btn-inner {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  border-radius: 50rpx;
}

.generate-btn.active .btn-inner {
  background: linear-gradient(135deg, var(--color-festival-gold) 0%, #F4CF47 100%);
  border: 4rpx solid #FFD700;
}

.generate-btn.disabled .btn-inner {
  background: rgba(128, 128, 128, 0.5);
}

.btn-icon {
  font-size: 36rpx;
}

.btn-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #8B0000;
}

.generate-btn.disabled .btn-text {
  color: rgba(255, 255, 255, 0.7);
}

/* 按钮光效 */
.btn-shine {
  position: absolute;
  top: 0;
  left: -100%;
  width: 50%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: shine 2s ease-in-out infinite;
}

@keyframes shine {
  0% { left: -100%; }
  50%, 100% { left: 200%; }
}

/* 预览弹窗 */
.preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.preview-modal.show {
  visibility: visible;
  opacity: 1;
}

.preview-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(10px);
}

.preview-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  height: 80%;
  max-width: 600rpx;
  background: #000000;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.3);
  border: 4rpx solid var(--color-festival-gold);
  display: flex;
  flex-direction: column;
}

.close-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, var(--color-festival-red) 0%, #8B0000 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid var(--color-festival-gold);
  z-index: 10;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.5);
}

.close-icon {
  font-size: 40rpx;
  color: var(--color-festival-gold);
  font-weight: bold;
  line-height: 1;
}

.preview-image {
  width: 100%;
  height: 100%;
  display: block;
}

.preview-image-area {
  flex: 1;
  width: 100%;
  background: #000000;
  position: relative;
  overflow: hidden;
}

.preview-image-movable {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-image-wrapper {
  position: relative;
  width: 100%;
  padding-top: 133.33%; /* 3:4 宽高比 */
}

.preview-image-inner {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.preview-info {
  padding: 32rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.7));
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

.preview-name {
  display: block;
  font-size: 36rpx;
  color: var(--color-festival-gold);
  font-weight: bold;
  margin-bottom: 8rpx;
}

.preview-desc {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 24rpx;
}

.select-btn {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, var(--color-festival-gold) 0%, #F4CF47 100%);
  border-radius: 24rpx;
  text-align: center;
}

.select-text {
  font-size: 32rpx;
  color: #8B0000;
  font-weight: bold;
}

/* ========================================
   老年模式适配
   ======================================== */

.elder-mode .nav-title {
  font-size: 42rpx;
}

.elder-mode .category-name {
  font-size: 34rpx;
}

.elder-mode .template-name {
  font-size: 34rpx;
}

.elder-mode .tip-label,
.elder-mode .tip-value {
  font-size: 32rpx;
}

.elder-mode .btn-text {
  font-size: 42rpx;
}

.elder-mode .preview-name {
  font-size: 42rpx;
}

.elder-mode .preview-desc {
  font-size: 32rpx;
}

.elder-mode .select-text {
  font-size: 38rpx;
}
