/**
 * 富贵变身结果页样式 - 复用原网页 ResultPage 设计
 * Requirements: 2.3, 8.1-8.4, 10.1-10.3
 */

.result-page {
  position: relative;
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #8B0000 0%, #6B0000 50%, #4B0000 100%);
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
  box-sizing: border-box;
}

.result-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 50% 30%, rgba(255, 215, 0, 0.08) 0%, transparent 50%);
  z-index: 0;
  pointer-events: none;
}

/* 装饰元素 */
.decorations {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;
}

.decoration {
  position: absolute;
  opacity: 0.2;
  font-size: 48rpx;
}

.lantern-1 {
  top: 200rpx;
  left: 40rpx;
}

.lantern-2 {
  bottom: 400rpx;
  right: 40rpx;
}

.animate-float {
  animation: float 5s ease-in-out infinite;
}

.animate-float-delay {
  animation: float 6s ease-in-out infinite;
  animation-delay: 1s;
}

@keyframes float {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  50% { transform: translateY(-20rpx) rotate(5deg); }
}

/* 顶部导航栏 */
.nav-bar {
  position: relative;
  z-index: 100;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  padding-top: calc(24rpx + env(safe-area-inset-top));
  background: rgba(139, 0, 0, 0.95);
  backdrop-filter: blur(10px);
  border-bottom: 2rpx solid rgba(255, 215, 0, 0.2);
  box-sizing: border-box;
}

.back-btn,
.home-btn {
  width: 64rpx;
  height: 64rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: var(--color-festival-gold);
  font-weight: bold;
  line-height: 1;
  margin-right: 4rpx;
}

.home-icon {
  font-size: 32rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--color-festival-gold);
}

/* 主内容区 */
.result-content {
  flex: 1;
  position: relative;
  z-index: 10;
  width: 100%;
  box-sizing: border-box;
}

/* 图片展示区 */
.image-section {
  padding: 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.image-frame {
  position: relative;
  padding: 8rpx;
  border-radius: 32rpx;
  background: linear-gradient(135deg, var(--color-festival-gold), #FFC700, var(--color-festival-gold));
}

.image-wrapper {
  position: relative;
  background: linear-gradient(135deg, #8B0000, #6B0000);
  border-radius: 28rpx;
  padding: 24rpx;
  overflow: hidden;
}

/* 加载状态 */
.loading-state {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #8B0000, #6B0000);
  z-index: 10;
  min-height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: var(--color-festival-gold);
  margin-top: 16rpx;
}

/* 图片 */
.result-image {
  width: 100%;
  border-radius: 16rpx;
  display: block;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.result-image.loaded {
  opacity: 1;
}

.result-image.hidden {
  display: none;
}

/* ========================================
   Live Photo 微动态样式
   ======================================== */

/* Live Photo 标识 */
.live-badge {
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  z-index: 20;
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 20rpx;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
  border-radius: 24rpx;
  border: 2rpx solid rgba(255, 215, 0, 0.3);
}

.live-dot {
  width: 16rpx;
  height: 16rpx;
  background: var(--color-festival-gold);
  border-radius: 50%;
}

.live-dot.playing {
  animation: pulse 1s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.5; transform: scale(1.2); }
}

.live-text {
  font-size: 24rpx;
  font-weight: bold;
  color: var(--color-festival-gold);
}

/* Live Photo 视频播放器 */
.live-photo-video {
  width: 100%;
  border-radius: 16rpx;
  display: block;
}

/* 微动态生成进度 */
.video-progress-section {
  padding: 0 32rpx 24rpx;
}

.progress-card {
  background: rgba(0, 0, 0, 0.3);
  border-radius: 24rpx;
  padding: 24rpx;
  border: 2rpx solid rgba(255, 215, 0, 0.2);
}

.progress-header {
  margin-bottom: 16rpx;
}

.progress-title {
  font-size: 28rpx;
  color: var(--color-festival-gold);
  font-weight: bold;
}

.progress-bar-wrapper {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--color-festival-gold), #FFC700);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
}

/* 微动态按钮样式 */
.btn-inner.orange {
  background: linear-gradient(135deg, #FF8C00, #FF6B00);
  border: 4rpx solid var(--color-festival-gold);
}

.btn-inner.orange .btn-text {
  color: #FFFFFF;
}

.btn-inner.green {
  background: linear-gradient(135deg, #10B981, #059669);
  border: 4rpx solid var(--color-festival-gold);
}

.btn-inner.green .btn-text {
  color: #FFFFFF;
}

/* 尊享标签 */
.premium-tag {
  font-size: 20rpx;
  color: #FFFFFF;
  background: linear-gradient(135deg, #FFD700, #FFA500);
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  margin-left: 8rpx;
}

/* AI标识 */
.ai-badge {
  position: absolute;
  bottom: 40rpx;
  left: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
  border-radius: 16rpx;
  border: 2rpx solid rgba(255, 215, 0, 0.2);
}

.badge-icon {
  font-size: 24rpx;
  color: var(--color-festival-gold);
}

.badge-text {
  font-size: 24rpx;
  color: var(--color-festival-gold);
}

/* 长按提示 */
.longpress-tip {
  text-align: center;
  padding: 16rpx;
}

.tip-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 功能按钮区 */
.action-section {
  padding: 16rpx 32rpx 48rpx;
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  box-sizing: border-box;
}

.action-btn {
  position: relative;
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  overflow: hidden;
}

.action-btn.loading {
  opacity: 0.7;
  pointer-events: none;
}

.btn-inner {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  border-radius: 48rpx;
}

.btn-inner.gold {
  background: linear-gradient(135deg, var(--color-festival-gold), #D4AF37);
  border: 4rpx solid #FFD700;
}

.btn-inner.red {
  background: linear-gradient(135deg, var(--color-festival-red), #8B0000);
  border: 4rpx solid var(--color-festival-gold);
}

.btn-inner.purple {
  background: linear-gradient(135deg, #8B5CF6, #6D28D9);
  border: 4rpx solid var(--color-festival-gold);
}

.btn-inner.transparent {
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 215, 0, 0.3);
}

.btn-icon {
  font-size: 36rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: bold;
}

.btn-inner.gold .btn-text {
  color: #8B0000;
}

.btn-inner.red .btn-text {
  color: var(--color-festival-gold);
}

.btn-inner.purple .btn-text {
  color: #FFFFFF;
}

.btn-inner.transparent .btn-text {
  color: var(--color-festival-gold);
}

/* 按钮光效 */
.btn-shine {
  position: absolute;
  top: 0;
  left: -100%;
  width: 50%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: shine 2s ease-in-out infinite;
}

@keyframes shine {
  0% { left: -100%; }
  50%, 100% { left: 200%; }
}

/* 分享按钮特殊样式 */
.share-btn {
  background: transparent;
  padding: 0;
  margin: 0;
  border: none;
  line-height: normal;
}

.share-btn::after {
  border: none;
}

/* ========================================
   老年模式适配
   ======================================== */

.elder-mode .nav-title {
  font-size: 42rpx;
}

.elder-mode .tip-text {
  font-size: 32rpx;
}

.elder-mode .action-btn {
  height: 112rpx;
}

.elder-mode .btn-icon {
  font-size: 44rpx;
}

.elder-mode .btn-text {
  font-size: 38rpx;
}

.elder-mode .badge-text {
  font-size: 28rpx;
}
