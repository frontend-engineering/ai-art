/**
 * 富贵变身结果选择页样式 - 复用原网页 ResultSelectorPage 设计
 * Requirements: 2.3, 15.1-15.4, 10.1-10.3
 */

.result-selector-page {
  position: relative;
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF8DC 0%, #FFF9E5 50%, #FFF0CC 100%);
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
  box-sizing: border-box;
}

.selector-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, 
    rgba(212, 175, 55, 0.08) 0%, 
    rgba(255, 248, 220, 0.9) 30%,
    rgba(255, 240, 204, 1) 100%
  );
  z-index: 0;
  pointer-events: none;
}

/* 导航栏样式使用通用样式文件 common-navigation.wxss */

/* 提示文字 */
.tip-section {
  position: relative;
  z-index: 10;
  padding: 24rpx 32rpx;
  text-align: center;
}

.tip-text {
  font-size: 26rpx;
  color: #8B4513;
}

/* 选择器内容 */
.selector-content {
  flex: 1;
  position: relative;
  z-index: 10;
  width: 100%;
  padding-bottom: calc(env(safe-area-inset-bottom));
  box-sizing: border-box;
}

/* ========================================
   老年模式适配
   ======================================== */

.elder-mode .nav-title {
  font-size: 42rpx;
}

.elder-mode .tip-text {
  font-size: 32rpx;
}

/* AI生成提示（合规要求） */
.ai-tip {
  display: block;
  font-size: 22rpx;
  color: rgba(139, 0, 0, 0.8);
  font-weight: 500;
  margin-top: 8rpx;
}

/* 老年模式 - AI提示 */
.elder-mode .ai-tip {
  font-size: 26rpx;
}
