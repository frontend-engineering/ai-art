/* 邀请好友页面样式 */

/* 导航栏样式使用通用样式文件 common-navigation.wxss */

.invite-page {
  position: relative;
  width: 100%;
  min-height: 100vh;
  overflow-x: hidden;
}

/* 背景渐变 */
.invite-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, 
    rgba(255, 248, 220, 0.9) 0%, 
    rgba(255, 240, 204, 0.95) 100%
  );
  z-index: 0;
  pointer-events: none;
}

/* 主内容区 */
.invite-content {
  position: relative;
  z-index: 10;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

/* 邀请卡片 */
.invite-card {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 0 auto 24rpx;
  max-width: 650rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 165, 0, 0.3);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.card-icon {
  font-size: 48rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #8B0000;
}

.card-desc {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.card-desc text {
  font-size: 26rpx;
  color: #8B4513;
}

.card-desc .highlight {
  font-size: 28rpx;
  font-weight: bold;
  color: #8B0000;
}

/* 分享说明 */
.share-hint {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.hint-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.hint-text {
  flex: 1;
  font-size: 24rpx;
  color: #8B4513;
  line-height: 1.6;
}

/* 分享按钮 */
.share-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #8B0000 0%, #DC143C 100%);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  border: none;
  padding: 0;
}

.share-btn::after {
  border: none;
}

.share-icon {
  font-size: 32rpx;
}

.share-text {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: bold;
}

/* 邀请统计 */
.stats-section {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 0 auto 24rpx;
  max-width: 650rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 24rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--color-festival-gold);
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
}

/* 邀请记录 */
.records-section {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 0 auto 24rpx;
  max-width: 650rpx;
}

.records-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 24rpx;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  background: rgba(255, 248, 220, 0.5);
  border-radius: 16rpx;
}

.record-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar-icon {
  font-size: 40rpx;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.record-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.record-time {
  font-size: 22rpx;
  color: #999999;
}

.record-reward {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 8rpx 16rpx;
  background: rgba(34, 139, 34, 0.1);
  border-radius: 32rpx;
}

.reward-icon {
  font-size: 24rpx;
  color: #228B22;
}

.reward-text {
  font-size: 22rpx;
  color: #228B22;
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #CCCCCC;
}

/* 邀请规则 */
.rules-section {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 0 auto 24rpx;
  max-width: 650rpx;
}

.rules-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 24rpx;
}

.rules-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rule-item {
  display: flex;
  gap: 16rpx;
  align-items: flex-start;
}

.rule-number {
  width: 40rpx;
  height: 40rpx;
  background: var(--color-festival-gold);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #8B0000;
  font-weight: bold;
  flex-shrink: 0;
}

.rule-text {
  flex: 1;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

/* 老年模式适配 */
.elder-mode .card-icon {
  font-size: 56rpx;
}

.elder-mode .card-title {
  font-size: 40rpx;
}

.elder-mode .card-desc text {
  font-size: 30rpx;
}

.elder-mode .card-desc .highlight {
  font-size: 32rpx;
}

.elder-mode .hint-text {
  font-size: 28rpx;
}

.elder-mode .share-btn {
  height: 100rpx;
}

.elder-mode .share-text {
  font-size: 36rpx;
}

.elder-mode .stats-title,
.elder-mode .records-title,
.elder-mode .rules-title {
  font-size: 36rpx;
}

.elder-mode .stat-value {
  font-size: 56rpx;
}

.elder-mode .stat-label {
  font-size: 28rpx;
}

.elder-mode .record-name {
  font-size: 32rpx;
}

.elder-mode .record-time {
  font-size: 26rpx;
}

.elder-mode .rule-text {
  font-size: 30rpx;
}
