/* 邀请好友页面样式 */

.invite-page {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

/* 背景渐变 */
.invite-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, 
    rgba(255, 248, 220, 0.9) 0%, 
    rgba(255, 240, 204, 0.95) 100%
  );
  z-index: 1;
}

/* 顶部工具栏 */
.toolbar {
  position: absolute;
  top: calc(16rpx + env(safe-area-inset-top));
  left: 32rpx;
  right: 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.back-icon {
  font-size: 48rpx;
  color: var(--color-festival-gold);
  font-weight: bold;
  line-height: 1;
  margin-right: 4rpx;
}

.toolbar-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #8B4513;
}

.toolbar-right {
  width: 64rpx;
}

/* 主内容区 */
.invite-content {
  position: absolute;
  top: calc(88rpx + env(safe-area-inset-top));
  left: 0;
  right: 0;
  bottom: env(safe-area-inset-bottom);
  z-index: 10;
  padding: 24rpx 32rpx;
}

/* 邀请卡片 */
.invite-card {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 165, 0, 0.3);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.card-icon {
  font-size: 48rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #8B0000;
}

.card-desc {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.card-desc text {
  font-size: 26rpx;
  color: #8B4513;
}

.card-desc .highlight {
  font-size: 28rpx;
  font-weight: bold;
  color: #8B0000;
}

/* 邀请码显示 */
.invite-code-section {
  margin-bottom: 24rpx;
}

.code-label {
  display: block;
  font-size: 24rpx;
  color: #8B4513;
  margin-bottom: 12rpx;
}

.code-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
}

.code-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #8B0000;
  letter-spacing: 4rpx;
}

.copy-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: var(--color-festival-gold);
  border-radius: 32rpx;
}

.copy-icon {
  font-size: 28rpx;
}

.copy-text {
  font-size: 24rpx;
  color: #8B0000;
  font-weight: 500;
}

/* 分享按钮 */
.share-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #8B0000 0%, #DC143C 100%);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  border: none;
  padding: 0;
}

.share-btn::after {
  border: none;
}

.share-icon {
  font-size: 32rpx;
}

.share-text {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: bold;
}

/* 邀请统计 */
.stats-section {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 24rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--color-festival-gold);
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
}

/* 邀请记录 */
.records-section {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.records-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 24rpx;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  background: rgba(255, 248, 220, 0.5);
  border-radius: 16rpx;
}

.record-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar-icon {
  font-size: 40rpx;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.record-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.record-time {
  font-size: 22rpx;
  color: #999999;
}

.record-reward {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 8rpx 16rpx;
  background: rgba(34, 139, 34, 0.1);
  border-radius: 32rpx;
}

.reward-icon {
  font-size: 24rpx;
  color: #228B22;
}

.reward-text {
  font-size: 22rpx;
  color: #228B22;
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #CCCCCC;
}

/* 邀请规则 */
.rules-section {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.rules-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 24rpx;
}

.rules-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rule-item {
  display: flex;
  gap: 16rpx;
  align-items: flex-start;
}

.rule-number {
  width: 40rpx;
  height: 40rpx;
  background: var(--color-festival-gold);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #8B0000;
  font-weight: bold;
  flex-shrink: 0;
}

.rule-text {
  flex: 1;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

/* 老年模式适配 */
.elder-mode .toolbar-title {
  font-size: 40rpx;
}

.elder-mode .card-icon {
  font-size: 56rpx;
}

.elder-mode .card-title {
  font-size: 40rpx;
}

.elder-mode .card-desc text {
  font-size: 30rpx;
}

.elder-mode .card-desc .highlight {
  font-size: 32rpx;
}

.elder-mode .code-text {
  font-size: 48rpx;
}

.elder-mode .copy-text {
  font-size: 28rpx;
}

.elder-mode .share-btn {
  height: 100rpx;
}

.elder-mode .share-text {
  font-size: 36rpx;
}

.elder-mode .stats-title,
.elder-mode .records-title,
.elder-mode .rules-title {
  font-size: 36rpx;
}

.elder-mode .stat-value {
  font-size: 56rpx;
}

.elder-mode .stat-label {
  font-size: 28rpx;
}

.elder-mode .record-name {
  font-size: 32rpx;
}

.elder-mode .record-time {
  font-size: 26rpx;
}

.elder-mode .rule-text {
  font-size: 30rpx;
}
