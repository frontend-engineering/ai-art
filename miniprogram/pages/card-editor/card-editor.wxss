/**
 * 贺卡编辑页样式 - 复用原网页 CardEditor 设计
 * Requirements: 2.4, 13.1-13.5, 10.1-10.3
 */

.card-editor-page {
  position: relative;
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #8B0000 0%, #6B0000 50%, #4B0000 100%);
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
  box-sizing: border-box;
}

.editor-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 50% 30%, rgba(255, 215, 0, 0.08) 0%, transparent 50%);
  z-index: 0;
  pointer-events: none;
}

/* 顶部导航栏 */
.nav-bar {
  position: relative;
  z-index: 100;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  padding-top: calc(24rpx + env(safe-area-inset-top));
  background: rgba(139, 0, 0, 0.95);
  backdrop-filter: blur(10px);
  box-sizing: border-box;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: var(--color-festival-gold);
  font-weight: bold;
  line-height: 1;
  margin-right: 4rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--color-festival-gold);
}

.nav-placeholder {
  width: 64rpx;
}

/* 主内容区 */
.editor-content {
  flex: 1;
  position: relative;
  z-index: 10;
  width: 100%;
  box-sizing: border-box;
}

/* 预览区域 */
.preview-section {
  padding: 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.preview-card {
  position: relative;
  width: 100%;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  border: 4rpx solid var(--color-festival-gold);
}

.preview-card-inner {
  position: relative;
  width: 100%;
  padding-top: 133.33%; /* 3:4 宽高比 */
}

.preview-card-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.card-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.photo-area {
  position: absolute;
  top: 15%;
  left: 15%;
  width: 70%;
  height: 50%;
  border-radius: 16rpx;
  overflow: hidden;
  border: 4rpx solid rgba(255, 215, 0, 0.5);
}

.user-photo {
  width: 100%;
  height: 100%;
}

.photo-placeholder {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.placeholder-icon {
  font-size: 64rpx;
}

.placeholder-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

.blessing-area {
  position: absolute;
  left: 0;
  right: 0;
  padding: 24rpx;
  text-align: center;
}

.blessing-area.bottom {
  bottom: 10%;
}

.blessing-area.center {
  top: 50%;
  transform: translateY(-50%);
}

.blessing-text {
  font-size: 36rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.5);
}

/* 区块样式 */
.section {
  padding: 24rpx 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: var(--color-festival-gold);
  margin-bottom: 24rpx;
}

/* 模板选择 */
.template-scroll {
  white-space: nowrap;
}

.template-list {
  display: flex;
  flex-direction: row;
  gap: 24rpx;
  padding: 8rpx 0;
}

.template-item {
  position: relative;
  width: 180rpx;
  flex-shrink: 0;
  border-radius: 16rpx;
  overflow: hidden;
  border: 4rpx solid transparent;
  transition: all 0.3s ease;
}

.template-item.selected {
  border-color: var(--color-festival-gold);
  transform: scale(1.05);
}

.template-thumb {
  width: 100%;
  display: block;
}

.template-thumb-wrapper {
  position: relative;
  width: 100%;
  padding-top: 133.33%; /* 3:4 宽高比 */
}

.template-thumb-inner {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.template-name {
  display: block;
  padding: 12rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  text-align: center;
  background: rgba(0, 0, 0, 0.6);
}

.check-mark {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: var(--color-festival-gold);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon {
  font-size: 24rpx;
  color: #8B0000;
  font-weight: bold;
}

/* 祝福语输入 */
.input-wrapper {
  position: relative;
  margin-bottom: 24rpx;
}

.blessing-input {
  width: 100%;
  height: 160rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 215, 0, 0.3);
  border-radius: 16rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  box-sizing: border-box;
}

.char-count {
  position: absolute;
  bottom: 16rpx;
  right: 24rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 预设祝福语 */
.preset-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.preset-item {
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 215, 0, 0.2);
  border-radius: 32rpx;
  transition: all 0.3s ease;
}

.preset-item.selected {
  background: rgba(255, 215, 0, 0.2);
  border-color: var(--color-festival-gold);
}

.preset-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.preset-item.selected .preset-text {
  color: var(--color-festival-gold);
}

/* 操作按钮 */
.action-section {
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  width: 100%;
  display: flex;
  flex-direction: row;
  gap: 24rpx;
  box-sizing: border-box;
}

.preview-btn,
.share-btn {
  flex: 1;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.preview-btn {
  background: linear-gradient(135deg, var(--color-festival-gold), #D4AF37);
}

.share-btn {
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 215, 0, 0.3);
  padding: 0;
  margin: 0;
  line-height: normal;
}

.share-btn::after {
  border: none;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 30rpx;
  font-weight: bold;
}

.preview-btn .btn-text {
  color: #8B0000;
}

.share-btn .btn-text {
  color: var(--color-festival-gold);
}

/* 预览弹窗 */
.preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.preview-modal.show {
  visibility: visible;
  opacity: 1;
}

.preview-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(10px);
}

.preview-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 85%;
  max-width: 600rpx;
}

.close-btn {
  position: absolute;
  top: -60rpx;
  right: 0;
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.close-icon {
  font-size: 40rpx;
  color: #FFFFFF;
  font-weight: bold;
  line-height: 1;
}

.full-preview-card {
  position: relative;
  width: 100%;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.5);
  border: 4rpx solid var(--color-festival-gold);
}

.full-preview-card-inner {
  position: relative;
  width: 100%;
  padding-top: 133.33%; /* 3:4 宽高比 */
}

.full-preview-card-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.save-btn {
  margin-top: 32rpx;
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, var(--color-festival-gold), #D4AF37);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn.loading {
  opacity: 0.7;
}

.save-text {
  font-size: 34rpx;
  font-weight: bold;
  color: #8B0000;
}

/* ========================================
   老年模式适配
   ======================================== */

.elder-mode .nav-title {
  font-size: 42rpx;
}

.elder-mode .section-title {
  font-size: 38rpx;
}

.elder-mode .template-name {
  font-size: 28rpx;
}

.elder-mode .blessing-input {
  font-size: 38rpx;
}

.elder-mode .preset-text {
  font-size: 32rpx;
}

.elder-mode .btn-text {
  font-size: 36rpx;
}

.elder-mode .blessing-text {
  font-size: 42rpx;
}

.elder-mode .save-text {
  font-size: 40rpx;
}
