/**
 * 通用导航栏样式
 * 包含模式副标题栏和主导航栏
 */

/* 页面容器 - 确保灵动岛区域背景色一致 */
.page-with-nav {
  position: relative;
  min-height: 100vh;
  width: 100%;
}

/* 灵动岛区域背景填充 */
.page-with-nav::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: env(safe-area-inset-top);
  background: #6B0000;
  z-index: 99;
  pointer-events: none;
}

/* 模式名称副标题栏 */
.mode-subtitle-bar {
  position: sticky;
  top: 0;
  z-index: 101;
  width: 100%;
  background: #6B0000;
  padding-top: env(safe-area-inset-top);
  padding-bottom: 12rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.mode-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.mode-name {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255, 215, 0, 0.9);
}

/* 顶部导航栏 - 有返回按钮版本 */
.nav-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 24rpx 32rpx;
  background: #6B0000;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.15);
  box-sizing: border-box;
  position: relative;
}

.nav-left {
  position: absolute;
  left: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 0;
  flex-shrink: 0;
}

.back-btn {
  width: 96rpx;
  height: 96rpx;
  background: transparent;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.back-icon {
  font-size: 80rpx;
  color: #FFD700;
  font-weight: bold;
  line-height: 1;
  margin-right: 4rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFD700;
  flex: 1;
  text-align: center;
}

.nav-right {
  width: 64rpx;
  flex-shrink: 0;
}

.nav-placeholder {
  width: 64rpx;
}

/* elder-mode-toggle 在导航栏中的位置 - 紧挨着返回键 */
.nav-left elder-mode-toggle {
  margin-left: 50rpx;
  flex-shrink: 0;
}

/* elder-mode-toggle 在导航栏中的样式 */
.nav-bar .elder-toggle .toggle-btn {
  width: 56rpx;
  height: 56rpx;
  border: 2rpx solid rgba(212, 175, 55, 0.4);
}

.nav-bar .elder-toggle .icon-text {
  font-size: 20rpx;
}

.nav-bar .elder-toggle.active .icon-text {
  font-size: 24rpx;
}

.nav-bar .elder-toggle .icon-label {
  font-size: 14rpx;
}

/* ========================================
   富贵变身模式 (Transform) 导航栏覆盖
   ======================================== */

.template-page .page-with-nav::before,
.result-page .page-with-nav::before,
.result-selector-page .page-with-nav::before,
.upload-page .page-with-nav::before {
  background: #D4AF37;
}

.template-page .mode-subtitle-bar,
.result-page .mode-subtitle-bar,
.result-selector-page .mode-subtitle-bar,
.upload-page .mode-subtitle-bar {
  background: #D4AF37;
}

.template-page .nav-bar,
.result-page .nav-bar,
.result-selector-page .nav-bar,
.upload-page .nav-bar {
  background: #D4AF37;
}

.template-page .back-icon,
.result-page .back-icon,
.result-selector-page .back-icon,
.upload-page .back-icon {
  color: #DC143C;
}

.template-page .nav-title,
.result-page .nav-title,
.result-selector-page .nav-title,
.upload-page .nav-title {
  color: #8B4513;
}
