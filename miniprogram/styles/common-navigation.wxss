/**
 * 通用导航栏样式
 * 包含模式副标题栏和主导航栏
 */

/* 页面容器 - 确保灵动岛区域背景色一致 */
.page-with-nav {
  position: relative;
  min-height: 100vh;
  width: 100%;
}

/* 灵动岛区域背景填充 */
.page-with-nav::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: env(safe-area-inset-top);
  background: #6B0000;
  z-index: 99;
  pointer-events: none;
}

/* 模式名称副标题栏 */
.mode-subtitle-bar {
  position: sticky;
  top: 0;
  z-index: 101;
  width: 100%;
  background: #6B0000;
  padding-top: env(safe-area-inset-top);
  padding-bottom: 12rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.mode-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.mode-name {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255, 215, 0, 0.9);
}

/* 顶部导航栏 - 有返回按钮版本 */
.nav-bar {
  position: sticky;
  /* 副标题栏高度 = env(safe-area-inset-top) + 12rpx(padding-bottom) + 约36rpx(内容高度) ≈ 48rpx */
  top: 0;
  z-index: 100;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background: #6B0000;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.15);
  box-sizing: border-box;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: #FFD700;
  font-weight: bold;
  line-height: 1;
  margin-right: 4rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFD700;
}

.nav-placeholder {
  width: 64rpx;
}

/* elder-mode-toggle 在导航栏中的容器 */
.nav-elder-toggle {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
