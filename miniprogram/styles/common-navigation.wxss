/**
 * 通用导航栏样式
 * 使用 JS 动态计算的高度，不依赖 CSS env() 变量
 */

/* 页面容器 */
.page-with-nav {
  position: relative;
  min-height: 100vh;
  width: 100%;
}

/* 内容容器 - 为导航栏留出空间 */
.nav-content {
  position: relative;
  z-index: 10;
  width: 100%;
  box-sizing: border-box;
}

/* 顶部导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: #d4302b;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.15);
  box-sizing: border-box;
}

.nav-left {
  position: absolute;
  left: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 0;
  flex-shrink: 0;
}

.back-btn {
  width: 72rpx;
  height: 72rpx;
  background: transparent;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.back-icon {
  font-size: 64rpx;
  color: #FFD700;
  font-weight: bold;
  line-height: 1;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFD700;
  flex: 1;
  text-align: center;
  padding: 0 16rpx;
}

.nav-right {
  width: 72rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

/* elder-mode-toggle 固定位置样式 */
.elder-mode-toggle-fixed {
  position: fixed;
  left: 32rpx;
  z-index: 9999;
}

/* ========================================
   大字模式适配
   ======================================== */

.elder-mode .back-btn {
  width: 88rpx;
  height: 88rpx;
}

.elder-mode .back-icon {
  font-size: 80rpx;
}

.elder-mode .nav-title {
  font-size: 42rpx;
}

/* ========================================
   富贵变身模式 (Transform) 导航栏覆盖
   ======================================== */

.transform-launch-page .nav-bar {
  background: #D4AF37;
}

.transform-launch-page .back-icon {
  color: #DC143C;
}

.transform-launch-page .nav-title {
  color: #8B4513;
}

