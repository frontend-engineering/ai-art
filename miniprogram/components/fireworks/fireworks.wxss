/* 烟花动画组件样式 - 复用原网页烟花动画效果 */
.fireworks-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.3s;
}

.fireworks-container.show {
  opacity: 1;
}

/* 烟花粒子 */
.particle {
  position: absolute;
  width: var(--size, 6px);
  height: var(--size, 6px);
  background: var(--color, #FFD700);
  border-radius: 50%;
  opacity: 0;
  animation: firework-explode 1s ease-out forwards;
  animation-delay: var(--delay, 0ms);
  box-shadow: 0 0 6px var(--color, #FFD700), 0 0 12px var(--color, #FFD700);
}

@keyframes firework-explode {
  0% {
    opacity: 1;
    transform: translate(0, 0) scale(1);
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0;
    transform: translate(var(--end-x, 0), var(--end-y, 0)) scale(0.5);
  }
}

/* 成功文字 */
.success-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0);
  opacity: 0;
  transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.success-text.show {
  transform: translate(-50%, -50%) scale(1);
  opacity: 1;
}

.text-box {
  background: linear-gradient(135deg, #D4302B, #D4AF37);
  padding: 24rpx 48rpx;
  border-radius: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(212, 48, 43, 0.4);
}

.text-content {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  white-space: nowrap;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 额外的装饰粒子效果 */
.fireworks-container::before,
.fireworks-container::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

/* 闪烁星星效果 */
.fireworks-container.show::before {
  background-image: 
    radial-gradient(2px 2px at 20% 30%, #FFD700, transparent),
    radial-gradient(2px 2px at 40% 70%, #D4302B, transparent),
    radial-gradient(2px 2px at 60% 20%, #FFD700, transparent),
    radial-gradient(2px 2px at 80% 60%, #D4302B, transparent),
    radial-gradient(2px 2px at 10% 80%, #FFD700, transparent),
    radial-gradient(2px 2px at 90% 40%, #D4302B, transparent);
  animation: twinkle 1s ease-in-out infinite;
}

@keyframes twinkle {
  0%, 100% {
    opacity: 0.3;
  }
  50% {
    opacity: 1;
  }
}
