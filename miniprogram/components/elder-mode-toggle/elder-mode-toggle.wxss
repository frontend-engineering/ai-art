/* 老年模式切换组件样式 */
.elder-toggle {
  position: relative;
  z-index: 40;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 位置样式 - 不再使用 fixed 定位，由父容器控制 */
.elder-toggle.bottom-right {
  /* 由父容器控制位置 */
}

.elder-toggle.bottom-left {
  /* 由父容器控制位置 */
}

.elder-toggle.top-right {
  /* 由父容器控制位置 */
}

.elder-toggle.top-left {
  /* 由父容器控制位置 */
}

/* 主按钮 */
.toggle-btn {
  position: relative;
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FFFFFF, #F5F5F5);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid rgba(212, 175, 55, 0.4);
  transition: all 0.3s;
}

.elder-toggle.active .toggle-btn {
  background: linear-gradient(135deg, #D4302B, #8B0000);
  border-color: #FFD700;
  box-shadow: 0 4rpx 20rpx rgba(212, 48, 43, 0.4);
}

/* 图标区域 */
.icon-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height: 1;
}

.icon-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B0000;
  transition: all 0.3s;
}

.elder-toggle.active .icon-text {
  font-size: 40rpx;
  color: #FFD700;
}

.icon-label {
  font-size: 20rpx;
  color: #8B0000;
  margin-top: 2rpx;
  transition: all 0.3s;
}

.elder-toggle.active .icon-label {
  color: #FFD700;
}

/* 状态指示器 */
.status-dot {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  border: 2rpx solid #FFFFFF;
  transition: all 0.3s;
}

.status-dot.off {
  background: #9CA3AF;
}

.status-dot.on {
  background: #10B981;
  animation: dot-pulse 1.5s ease-in-out infinite;
}

@keyframes dot-pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.8;
  }
}

/* 提示文字 */
.toggle-label {
  margin-top: 8rpx;
  padding: 4rpx 12rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 8rpx;
}

.label-text {
  font-size: 20rpx;
  color: #FFFFFF;
  white-space: nowrap;
}

.elder-toggle.active .label-text {
  font-size: 22rpx;
}
