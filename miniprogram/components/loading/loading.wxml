<!-- 加载组件 - 灯笼图片 -->
<view class="loading-container">
  <view class="lantern-image-wrapper" style="width: {{lanternSize}}; height: {{lanternSize}};">
    <image 
      class="lantern-image"
      src="{{lanternUrl}}"
      mode="aspectFit"
    ></image>
  </view>
  <text wx:if="{{showText}}" class="loading-text">{{text}}</text>
</view>
