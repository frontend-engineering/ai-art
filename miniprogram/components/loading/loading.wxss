/* 加载组件样式 - 灯笼图片 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}

.lantern-image-wrapper {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border-radius: 50%;
  padding: 8rpx;
}

.lantern-image {
  width: 100%;
  height: 100%;
  animation: lanternSpin 2s linear infinite;
  object-fit: contain;
  object-position: center;
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #FF4444;
  font-weight: bold;
  white-space: nowrap;
}

@keyframes lanternSpin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
