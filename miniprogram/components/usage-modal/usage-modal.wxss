/* 使用次数模态框样式 */

.usage-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: none;
}

.usage-modal.show {
  display: block;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  animation: fadeIn 0.3s ease;
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  max-width: 90%;
  background: #FFFFFF;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  animation: slideUp 0.3s ease;
}

.modal-body {
  padding: 48rpx 40rpx;
  text-align: center;
}

.modal-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
}

.modal-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.modal-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 32rpx;
  line-height: 1.6;
}

.modal-tips {
  background: #FFF8F0;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  text-align: left;
}

.modal-tips text {
  display: block;
  font-size: 26rpx;
  color: #8B4513;
  line-height: 1.8;
  margin-bottom: 8rpx;
}

.modal-tips text:last-child {
  margin-bottom: 0;
}

/* 付费套餐优势列表 */
.modal-benefits {
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  text-align: left;
}

.benefits-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.benefit-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.benefit-item:last-child {
  margin-bottom: 0;
}

.benefit-icon {
  font-size: 24rpx;
  color: #4CAF50;
  margin-right: 12rpx;
  font-weight: bold;
}

.benefit-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

/* 套餐选项列表 */
.modal-packages {
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  text-align: left;
}

.package-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.package-item {
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 12rpx;
  border: 2rpx solid #E0E0E0;
}

.package-item:last-child {
  margin-bottom: 0;
}

.package-item.highlight {
  border-color: #FF6B6B;
  background: linear-gradient(135deg, #FFF5F5 0%, #FFFFFF 100%);
}

.package-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.package-price {
  display: inline-block;
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B6B;
  margin-right: 12rpx;
}

.package-desc {
  display: inline-block;
  font-size: 24rpx;
  color: #999999;
}

.modal-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  padding: 0;
}

.btn-primary {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF4757 100%);
  color: #FFFFFF;
}

.btn-secondary {
  background: #F5F5F5;
  color: #666666;
}

.btn-primary::after,
.btn-secondary::after {
  border: none;
}

.modal-close {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999999;
  cursor: pointer;
}

/* 老年模式样式 */
.modal-content.elder-mode {
  width: 640rpx;
}

.modal-content.elder-mode .modal-body {
  padding: 56rpx 48rpx;
}

.modal-content.elder-mode .modal-icon {
  font-size: 120rpx;
}

.modal-content.elder-mode .modal-title {
  font-size: 48rpx;
  margin-bottom: 20rpx;
}

.modal-content.elder-mode .modal-desc {
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.modal-content.elder-mode .modal-tips {
  padding: 32rpx;
  margin-bottom: 40rpx;
}

.modal-content.elder-mode .modal-tips text {
  font-size: 30rpx;
  line-height: 2;
  margin-bottom: 12rpx;
}

.modal-content.elder-mode .btn {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
}

.modal-content.elder-mode .modal-close {
  width: 64rpx;
  height: 64rpx;
  font-size: 48rpx;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translate(-50%, -40%);
    opacity: 0;
  }
  to {
    transform: translate(-50%, -50%);
    opacity: 1;
  }
}
