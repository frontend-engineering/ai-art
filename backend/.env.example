# Coze API Configuration
COZE_API_TOKEN=your_coze_api_token
COZE_BASE_URL=https://api.coze.cn
COZE_BOT_ID=your_coze_bot_id

# 火山方舟API Configuration (新版 - 推荐)
# 获取方式: https://console.volcengine.com/ark/region:ark+cn-beijing/apiKey
ARK_API_KEY=your_ark_api_key

# 火山引擎API Configuration (旧版 - 兼容)
VOLCENGINE_ACCESS_KEY_ID=your_volcengine_access_key_id
VOLCENGINE_SECRET_ACCESS_KEY=your_volcengine_secret_access_key

# 腾讯云OSS Configuration
COS_SECRET_ID=your_cos_secret_id
COS_SECRET_KEY=your_cos_secret_key
COS_BUCKET=your_cos_bucket
COS_REGION=your_cos_region
COS_DOMAIN=your_cos_domain

# Server Configuration
PORT=3001

# Python 路径配置（可选，默认使用 venv 或系统 python3）
# PYTHON_PATH=/usr/bin/python3

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_db_password
DB_NAME=ai_family_photo

# API Base URL
API_BASE_URL=http://localhost:3001

# Mock 模式（开发调试用，跳过真实 AI 调用）
# 设置为 true 启用 mock 模式
MOCK_AI_ENABLED=false

# WeChat Payment Configuration
WECHAT_APPID=your_wechat_appid
WECHAT_SECRET=your_wechat_app_secret
WECHAT_MCHID=your_wechat_merchant_id
WECHAT_SERIAL_NO=your_wechat_certificate_serial_number
WECHAT_PRIVATE_KEY=your_wechat_private_key_path_or_content
WECHAT_APIV3_KEY=your_wechat_apiv3_key
PAYMENT_URL=https://your-domain.com/pay

# Internal API Secret (用于云函数与后端服务器之间的安全通信)
# 与云函数的 INTERNAL_API_SECRET 保持一致
# 生成方式: openssl rand -hex 32
INTERNAL_API_SECRET=your-secret-key-here
